<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="root" alignment="center" hgap="10" prefHeight="1000.0" prefWidth="1000.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <BorderPane minHeight="800.0" minWidth="800.0">
        <center>
            <ScrollPane fx:id="imageHolder" fitToHeight="true" fitToWidth="true" />
        </center>
        <bottom>
            <HBox>
                <children>
                    <Button fx:id="previousPage" text="Previous" />
                    <Button fx:id="nextPage" text="Next" />
                </children>
            </HBox>
        </bottom>
    </BorderPane>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
