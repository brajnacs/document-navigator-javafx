<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml">
    <center>
        <ScrollPane fx:id="imageHolder" fitToHeight="true" fitToWidth="true" />
    </center>
    <bottom>
        <HBox>
            <children>
                <Button fx:id="previousPage" text="Previous" />
                <Button fx:id="nextPage" text="Next" />
                <Button fx:id="zoomInPage" text="Zoom In" />
                <Button fx:id="zoomOutPage" text="Zoom Out" />
                <Button fx:id="saveImage" text="Save Image" />
            </children>
        </HBox>
    </bottom>
</fx:root>